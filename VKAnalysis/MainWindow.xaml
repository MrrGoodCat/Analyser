<Window x:Class="VKAnalysis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VKAnalysis"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="GetFiendsButton" Content="Get Friends" HorizontalAlignment="Left" Margin="432,10,0,0" VerticalAlignment="Top" Width="75" Click="GetFiendsButton_Click"/>
        <ListView x:Name="UsersListView" HorizontalAlignment="Left" Height="143" Margin="10,10,0,0" VerticalAlignment="Top" Width="417">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="130" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Surname" Width="130" DisplayMemberBinding="{Binding Surname}"/>
                    <GridViewColumn Header="Age" Width="40" DisplayMemberBinding="{Binding Age}"/>
                    <GridViewColumn Header="Sex" Width="70" DisplayMemberBinding="{Binding Sex}"/>
                    <GridViewColumn Header="bc" Width="40" DisplayMemberBinding="{Binding ReadedBooks.Count}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="BooksListView" HorizontalAlignment="Left" Height="152" Margin="10,158,0,0" VerticalAlignment="Top" Width="417">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="205" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Author" Width="205" DisplayMemberBinding="{Binding Author}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="GetBooksButton" Content="Get Books" HorizontalAlignment="Left" Margin="432,37,0,0" VerticalAlignment="Top" Width="75" Click="GetBooksButton_Click"/>

    </Grid>
</Window>
