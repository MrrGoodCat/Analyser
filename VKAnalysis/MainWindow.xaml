<Window x:Class="VKAnalysis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VKAnalysis"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="531.825" MinWidth="550" MinHeight="350">
    <Grid>
        <Button x:Name="GetFiendsButton" Content="Get Friends" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="75" Click="GetFiendsButton_Click"/>
        <ListView x:Name="UsersListView" Margin="10,10,0,0" MaxHeight="500" MaxWidth="700" MinHeight="150" MinWidth="410" HorizontalAlignment="Left" VerticalAlignment="Top">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="130" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Surname" Width="130" DisplayMemberBinding="{Binding Surname}"/>
                    <GridViewColumn Header="Age" Width="40" DisplayMemberBinding="{Binding Age}"/>
                    <GridViewColumn Header="Sex" Width="70" DisplayMemberBinding="{Binding Sex}"/>
                    <GridViewColumn Header="Books" Width="40" DisplayMemberBinding="{Binding ReadedBooks.Count}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="BooksListView" Margin="10,0,0,10" MaxHeight="500" MaxWidth="700" MinHeight="150" MinWidth="411" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="205" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Author" Width="205" DisplayMemberBinding="{Binding Author}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="GetBooksButton" Content="Get Books" HorizontalAlignment="Right" Margin="0,37,10,0" VerticalAlignment="Top" Width="75" Click="GetBooksButton_Click"/>
        <Button x:Name="ButtonGenerateXML" Content="Generate XML" HorizontalAlignment="Right" Margin="0,64,10,0" VerticalAlignment="Top" Width="75" Click="ButtonGenerateXML_Click"/>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
